<div class="panel inline-list">
  <%= link_to material.title, material %>

  <%= t("practice.show.practices_count",
      practices_count: material.practices_count)
  %>

  <ul class="right button-group radius">
    <% if material.completed? %>
      <%= link_to "Make active", [material, :completion],
        method: :delete, :class => "button tiny secondary"
      %>
    <% else %>
      <%= link_to "Mark completed", [material, :completion],
        method: :post, :class => "button tiny secondary"
      %>
    <% end %>

    <%= link_to t("practice.show.mark_practiced"), [material, :practices],
      method: :post, :class => "button tiny success"
    %>
  </ul>
</div>
